<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <%= f.fields_for :ingredients do |i| %>
    Ingredient 1: <%= i.text_field :ingredient_1 %>
    Ingredient 2: <%= i.text_field :ingredient_2 %>
    Name: <%= i.text_field :name %>
    Quantity: <%= i.text_field :quantity %>
  <% end %>
  <%= f.submit %>
<% end %>
