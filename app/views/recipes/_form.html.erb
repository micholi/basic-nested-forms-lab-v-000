<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :ingredient_1 %>
    <%= i.text_field :ingredient_1 %>
    
    <%= i.label :ingredient_2 %>
    <%= i.text_field :ingredient_2 %>

    <%= i.label :name %>
    <%= i.text_field :name %>

    <%= i.label :quantity %>
    <%= i.text_field :quantity %>

    <%= i.label :ingredient_type %>
    <%= i.text_field :ingredient_type %>
  <% end %>
  <%= f.submit %>
<% end %>
